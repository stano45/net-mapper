{
  "manifest_version": 3,
  "name": "net-mapper",
  "description": "Discover the global destinations of your internet traffic.",
  "version": "1.0",
  "permissions": ["webRequest", "storage", "downloads"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["*://*/*"],
  "action": {
    "default_title": "net-mapper",
    "default_popup": "popup.html"
  },
  "icons": {
    "256": "icon/globe-showing-europe-africa.256x256.png",
    "512": "icon/globe-showing-europe-africa.512x512.png",
    "1024": "icon/globe-showing-europe-africa.1024x1024.png"
  }
}
